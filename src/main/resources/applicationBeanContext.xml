<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
<!--    a bean definition contains the configuration metadata that the container needs to know and create and manage the bean
 -->
<!--    Bean configuration can be provided in xml comfig files, annotations, java based config too-->

    <bean id="myBean" class="car.example.bean.MyBean">

<!--      property means, the particular attribute of the class, bean invokes the particular setter function of that attribute, if no setter is provided, error occurs  /-->
        <property name="message" value = "I am a first Bean" />
    </bean>

</beans>

<!--    beans can be configured using annotations likes @Component, @Service, @Repository, which are scanned by spring and managed as beans    -->